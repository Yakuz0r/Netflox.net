@page
@model Netflox.Pages.Admin.Films.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.MovieID" />
            <div class="form-group">
                <label asp-for="Movie.ImageUrl" class="control-label"></label>
                <input asp-for="Movie.ImageUrl" class="form-control" />
                <span asp-validation-for="Movie.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.NameMovie" class="control-label"></label>
                <input asp-for="Movie.NameMovie" class="form-control" />
                <span asp-validation-for="Movie.NameMovie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Recommendation" class="control-label"></label>
                <input asp-for="Movie.Recommendation" class="form-control" />
                <span asp-validation-for="Movie.Recommendation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Time" class="control-label"></label>
                <input asp-for="Movie.Time" class="form-control" />
                <span asp-validation-for="Movie.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Director" class="control-label"></label>
                <input asp-for="Movie.Director" class="form-control" />
                <span asp-validation-for="Movie.Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Actor" class="control-label"></label>
                <input asp-for="Movie.Actor" class="form-control" />
                <span asp-validation-for="Movie.Actor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movie.Synopsis" class="control-label"></label>
                <input asp-for="Movie.Synopsis" class="form-control" />
                <span asp-validation-for="Movie.Synopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

