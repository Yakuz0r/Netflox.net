@model Netflox.Pages.Admin.Films.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].NameMovie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Recommendation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Actor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Synopsis)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameMovie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recommendation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Actor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Synopsis)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MovieID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MovieID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MovieID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
